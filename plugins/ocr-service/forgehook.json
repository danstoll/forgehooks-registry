{
  "$schema": "../../forgehook-schema.json",
  "id": "ocr-service",
  "name": "OCR Service",
  "version": "1.1.0",
  "description": "Optical Character Recognition for extracting text from images, supporting multiple languages and OCR engines",
  "author": {
    "name": "FlowForge",
    "url": "https://flowforge.dev"
  },
  "license": "MIT",
  "repository": "https://github.com/flowforge/ocr-service",
  "icon": "scan",
  "category": "media",
  "tags": ["ocr", "text-extraction", "image", "recognition", "paddleocr", "tesseract"],
  
  "image": {
    "repository": "flowforge/ocr-service",
    "tag": "1.0.0"
  },
  
  "port": 4004,
  "basePath": "/api/v1/ocr",
  
  "healthCheck": {
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  
  "endpoints": [
    {
      "method": "POST",
      "path": "/extract",
      "description": "Extract text from an image",
      "requestBody": {
        "image": "base64-encoded-image",
        "language": "en",
        "engine": "paddleocr"
      }
    },
    {
      "method": "POST",
      "path": "/extract-regions",
      "description": "Extract text with bounding box coordinates",
      "requestBody": {
        "image": "base64-encoded-image",
        "language": "en"
      }
    },
    {
      "method": "POST",
      "path": "/batch",
      "description": "Process multiple images in batch",
      "requestBody": {
        "images": ["base64-image-1", "base64-image-2"],
        "language": "en"
      }
    },
    {
      "method": "POST",
      "path": "/detect-language",
      "description": "Detect the language of text in an image",
      "requestBody": {
        "image": "base64-encoded-image"
      }
    },
    {
      "method": "POST",
      "path": "/table",
      "description": "Extract tables from images",
      "requestBody": {
        "image": "base64-encoded-image",
        "format": "json"
      }
    },
    {
      "method": "GET",
      "path": "/languages",
      "description": "Get list of supported languages",
      "authentication": false
    },
    {
      "method": "GET",
      "path": "/health",
      "description": "Health check endpoint",
      "authentication": false
    }
  ],
  
  "environment": [
    {
      "name": "LOG_LEVEL",
      "description": "Logging verbosity level",
      "default": "info",
      "required": false
    },
    {
      "name": "OCR_ENGINE",
      "description": "OCR engine to use (paddleocr, tesseract)",
      "default": "paddleocr",
      "required": false
    },
    {
      "name": "DEFAULT_LANGUAGE",
      "description": "Default language for OCR",
      "default": "en",
      "required": false
    }
  ],
  
  "dependencies": {
    "services": ["redis"]
  },
  
  "resources": {
    "memory": "1g",
    "cpu": "1.0"
  }
}
