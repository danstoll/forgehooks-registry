{
  "name": "@flowforge/pdf-service",
  "version": "1.1.0",
  "description": "PDF generation and manipulation service for FlowForge",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage",
    "docker:build": "docker build -t flowforge/pdf-service:latest .",
    "docker:run": "docker run -p 3003:3003 --env-file .env flowforge/pdf-service:latest"
  },
  "keywords": [
    "pdf",
    "generation",
    "merge",
    "extract",
    "puppeteer",
    "microservice",
    "flowforge",
    "fastify"
  ],
  "author": "FlowForge Contributors",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/multipart": "^8.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@sinclair/typebox": "^0.32.9",
    "dotenv": "^16.3.1",
    "dompurify": "^3.0.8",
    "fastify": "^4.26.0",
    "handlebars": "^4.7.8",
    "jsdom": "^24.0.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^4.0.379",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "puppeteer": "^21.7.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
